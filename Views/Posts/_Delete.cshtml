@using Social_Media_Website.ViewModels
@model Posts

<head>
    <meta charset="UTF-8">
    <title>FollowBook</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<h3>Delete Post</h3>

<h6>Are you sure you want to delete this post?</h6>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <input type="hidden" value="AddressId" id="AddressId" />


    <div class="form-group-1">
      @*  <label asp-for="PostTitle">Title</label>*@
        <input type="hidden" asp-for="PostTitle" class="form-control" placeholder="Title">
        <span asp-validation-for="PostTitle" class="text-danger"></span>
    </div>
    <div class="form-group-1">
       @* <label asp-for="PostContent">PostContent</label>*@
        <input type="hidden" asp-for="PostContent" class="form-control" placeholder="Description">
        <span asp-validation-for="PostContent" class="text-danger"></span>
    </div>
    <div class="form-group1">
       @* <label asp-for="Image">Image</label>*@
        <input  style="display:none" asp-for="Image" type="file" class="form-control" placeholder="Image">
        <span  asp-validation-for="Image" class="text-danger"></span>
    </div>
</form>
 
<div class="">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="button" class="cancel-button">Cancel</button>
        <input type="submit" value="Confirm" class="edit-profile-submit-button" />
    </form>
</div>

@using Social_Media_Website.ViewModels

@model EditProfileViewModel

<head>
    <meta charset="UTF-8">
    <title>FollowBook</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>


<form method="post" asp-action="EditUserProfile" enctype="multipart/form-data">
    <input type="hidden" id="Id" name="Id" asp-for="Id" />
<div class="form-group-1">
        <label asp-for="UserName">Username:</label>   
        <input asp-for="UserName" class="form-control" placeholder="UserName">
        <span asp-validation-for="UserName" class="text-danger"></span>
</div>
 <div class="form-group-1">
        <label asp-for="Country">Country:</label>   
        <input asp-for="Country" class="form-control" placeholder="Country">
        <span asp-validation-for="Country" class="text-danger"></span>
 </div>
 <div class="form-group-1">
        <label asp-for="City">City:</label>
        <input asp-for="City" class="form-control" placeholder="City">
        <span asp-validation-for="City" class="text-danger"></span>
 </div>

    <button type="submit" class="edit-profile-submit-button">Submit</button>
</form>
